#!/usr/bin/perl

use strict;
use warnings;
use File::Basename;
use File::Copy;
use GetOpt::WonderBra;

if ( @ARGV < 1 ) {
	print STDERR "usage: $0 <dest> <files...>\n";
	exit 1;
}


my $dir=shift;
unless ( -d $dir ) {
	mkdir $dir or die "mkdir:$dir:$!";
};

for(@ARGV) {
	unless( -e "$_" ) {
		warn "'$_' does not exist";
		next;
	};
	my $dst="$dir/".basename($_);
	if( -e $dst ) {
		warn "'$dst' exists.  Skipping\n";
		next;
	}
	unless(move($_,$dst)) {
		warn "move($_,$dst) failed:$!";
	};
};
